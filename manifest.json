{
    "manifest_version": 2,
  
    "name": "English-Hindi Dictionary",
    "description": "Download the largest English hindi dictionary with over lakhs of words. Meaning of words are provided in a simple way.",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery.js", "popup.js"]
      }],
    "permissions": ["tabs", "http://*/*", "https://*/*"],
    "web_accessible_resources": [
      "style.css"
    ]
  }